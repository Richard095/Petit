<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/petImage_list_item"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bookmark_border_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/style_post">

        <TextView
            android:id="@+id/pet_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capitanio"
            android:textSize="12sp"
            android:textColor="#95a5a6"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/num_reactions_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="12sp"
            android:textColor="#95a5a6"
            android:layout_weight="3"
            android:textAlignment="center"/>

       <ImageView
           android:id="@+id/image_reaction"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="3"
           android:src="@drawable/ic_favorite_black_24dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/status_post_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#651fff"
        android:text="@string/en_adopcion_item"
        android:textAlignment="center"
        android:padding="8dp"
        android:textColor="#ffffff"/>
</LinearLayout>